{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cwa-tauri-template",
  "version": "0.1.0",
  "identifier": "com.cwa-tauri-template.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CWA Tauri Template",
        "width": 800,
        "height": 600,
        "minWidth": 450,
        "minHeight": 250,
        "decorations": true,
        "transparent": false,
        "theme": "Dark",
        "backgroundColor": "#0a0a0a",
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/codewithali_icon_circle_128x128.ico"
    ]
  }
}
